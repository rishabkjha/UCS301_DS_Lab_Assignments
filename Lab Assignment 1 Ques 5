#include <iostream>
using namespace std;
int main() {
    int r, c;
    cout << "Enter no. of rows and columns: ";
    cin >> r >> c;
    int arr[10][10];
    cout << "Enter elements of the matrix:\n";
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {
            cin >> arr[i][j];
        }
    }
    cout << "Sum of each row:\n";
    for (int i = 0; i < r; i++) {
        int row = 0;
        for (int j = 0; j < c; j++) {
            row += arr[i][j];
        }
        cout << "Row " << i + 1 << ": " << row << endl;
    }
    cout << "Sum of each column:\n";
    for (int j = 0; j < c; j++) {
        int col = 0;
        for (int i = 0; i < r; i++) {
            col += arr[i][j];
        }
        cout << "Column " << j + 1 << ": " << col << endl;
    }
    return 0;
}
